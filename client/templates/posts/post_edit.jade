template(name='postEdit')
   form.main.form
      .form-group
         label.control-label(for='url') URL
         .controls
            input#url.form-control(name='url', type='text', value='#{url}', placeholder='Your URL')
      .form-group
         label.control-label(for='title') Title
         .controls
            input#title.form-control(name='title', type='text', value='#{title}', placeholder='Name your Post')
      input.btn.btn-primary.submit(type='submit', value='Submit')
      hr
      a.btn.btn-danger.delete(href='#') Delete Post
