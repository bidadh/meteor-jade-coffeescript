template(name="postItem")
   .post
      a(href='#', class='upvote btn btn-default glyphicon glyphicon-arrow-up #{upvotedClass}')
      .post-content
         h3
            a(href="#{url}") #{title}
            span #{domain}
         p {{pluralize votes "Vote"}}
            | , submitted by #{author},
            a(href='{{pathFor "postPage"}}') #{commentsCount} comments
            +if ownPost
               a(href='{{pathFor "postEdit"}}') Edit
      a.discuss.btn.btn-default(href="{{pathFor 'postPage'}}") Discuss